@model IEnumerable<MPA.Models.SupplierVM>

    @{
    ViewData["Title"] = "Supplier List";
    }


    @if (Model.Count() == 0)
    {

    <div class="error-page">

        <div class="error-content">
            <h3><i class="fas fa-exclamation-triangle text-warning"></i> Oops! No suppliers.</h3>
            <p> You haven't added suppliers on the database, consinder adding suppliers to the database. </p>
            <button type="button" class="btn"><a class="btn btn-primary" asp-action="Create">Add Supplier</a></button>
        </div>
        <!-- /.error-content -->
    </div>


    } else
    {

    <div class="card card-primary mb-5 card-outline">
        <div class="card-header ">
            <div class="wrapper-inner-card d-flex justify-content-between align-items-center">
                <h3 class="card-title">Supplier List</h3>

                <a asp-action="Create" class="btn btn-light">Add</a>
            </div>
        </div>
        <div class="card-body p-0">

            <table class="table table-striped">
                <thead>
                    <tr>
                        <th> @Html.DisplayNameFor(model => model.Name) </th>
                        <th> @Html.DisplayNameFor(model => model.PaymentTerms) </th>
                        <th>@Html.DisplayNameFor(model => model.SpokePerson)</th>
                        <th>Emails</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.PaymentTerms) Days Delivery
                        </td>

                        <td>
                            @Html.DisplayFor(modelItem => item.SpokePerson)
                        </td>

                        <td>
                            <a asp-area="" asp-route-id="@item.Id" asp-controller="Supplier"
                                asp-action="Details">view</a>
                        </td>

                        <td>
                            <div class="row">
                                <div class="col-2">
                                    <a asp-action="Edit" class="" asp-route-id="@item.Id">
                                        <i class="fas fa-pencil-alt" aria-hidden="true"></i>
                                    </a>
                                </div>
                                <div class="col-2">
                                    <form asp-action="Delete" asp-route-id="@item.Id" method="post">
                                        <button type="submit" class="custom-btn del"
                                            onclick="return confirm('Are you sure you want to delete this record?')">
                                            <i class="fas fa-trash" aria-hidden="true"></i>
                                        </button>
                                    </form>
                                </div>
                            </div>

                        </td>
                    </tr>
                    }
                </tbody>
            </table>

        </div>
    </div>
    }
